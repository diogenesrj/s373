mpd_port = "6600"
mpd_music_dir = "/home/ghost/Música/"
mpd_connection_timeout = "5"
mpd_crossfade_time = "1"

# Display ..
song_list_format = "{ $8%a ✘ $2}{%t}$8 $R$8{%l}"
#song_library_format = "{$8%a ⠂ }{%t}$R{%l}"
song_columns_list_format =  "(5f)[black]{l} (30)[red]{a} (40)[white]{t|f} (25)[cyan]{b}"
#song_status_format = {♫  %a - %t}|{%f}
song_status_format = "$8%a $2»» $8%t $2"
playlist_display_mode = "columns" (classic/columns)

# Now Playing ..
now_playing_prefix = "$b$5"
now_playing_suffix = "$/b$9"

# Progress Bar ..
progressbar_look = "─╼─"
#progressbar_look = "─╼ "
progressbar_color = "black"
progressbar_elapsed_color = "red"

# Colors ..
colors_enabled = "yes"
empty_tag_color = "red"
state_line_color = "red"
state_flags_color = "red"
main_window_color = default
color1 = "black"
color2 = "cyan"
statusbar_color = "white"
statusbar_time_color = "black"
player_state_color = "white"
#alternative_ui_separator_color = "red"

